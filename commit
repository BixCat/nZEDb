#!/usr/bin/env bash

export NZEDB_ROOT="$(pwd)"
export NZEDB_A_CONFIG=$NZEDB_ROOT/www/automated.config.php

# Get the user values in automated.config.php.
nZEDb_DEBUG=`grep -e "define('nZEDb_DEBUG', .*);" $NZEDB_A_CONFIG`
nZEDb_LOGGING=`grep -e "define('nZEDb_LOGGING', .*);" $NZEDB_A_CONFIG`

# Change them to the default values.
sed -i "s/define('nZEDb_DEBUG', true);/define('nZEDb_DEBUG', false);/" $NZEDB_ROOT/www/automated.config.php
sed -i "s/define('nZEDb_LOGGING', true);/define('nZEDb_LOGGING', false);/" $NZEDB_ROOT/www/automated.config.php

# Commit changes.
git add -i

nano Changelog
git add Changelog

git commit

# Set back the users values in automated.config.php
sed -i "s/define('nZEDb_DEBUG', false);/$nZEDb_DEBUG/" $NZEDB_ROOT/www/automated.config.php
sed -i "s/define('nZEDb_LOGGING', false);/$nZEDb_LOGGING/" $NZEDB_ROOT/www/automated.config.php
